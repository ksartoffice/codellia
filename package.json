{
  "name": "codellia",
  "version": "1.0.0",
  "description": "Live HTML/CSS/JS editor with a custom Codellia post type, Monaco Editor, and live preview.",
  "license": "GPL-2.0-or-later",
  "scripts": {
    "prepare:monaco": "node scripts/prepare-monaco.mjs",
    "predev": "npm run prepare:monaco",
    "prebuild": "npm run prepare:monaco",
    "version:set": "node scripts/version-set.mjs",
    "version:check": "node scripts/version-check.mjs",
    "dev": "vite",
    "build": "vite build",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "plugin-zip": "npm run build && composer install --no-dev --optimize-autoloader && node scripts/plugin-zip.mjs && composer install",
    "e2e": "playwright test",
    "e2e:install": "playwright install"
  },
  "dependencies": {
    "@wordpress/components": "^31.0.0",
    "@wordpress/element": "^6.37.0",
    "@wordpress/i18n": "^6.10.0",
    "@wordpress/icons": "^11.4.0",
    "emmet-monaco-es": "^5.6.1",
    "lucide": "^0.563.0",
    "monaco-editor": "^0.55.1",
    "parse5": "^8.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "adm-zip": "^0.5.16",
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.3",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@wordpress/scripts": "^31.3.0",
    "dotenv": "^16.6.1",
    "ignore": "^5.3.2",
    "jsdom": "^26.0.0",
    "typescript": "^5.9.3",
    "vite": "^6.4.1",
    "vitest": "^3.2.4"
  }
}
