{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "react-jsx",
    "types": ["node"],
    "lib": ["ES2020", "DOM"],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "tests/js/**/*.ts",
    "tests/js/**/*.d.ts",
    "scripts/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "vendor",
    "assets"
  ]
}